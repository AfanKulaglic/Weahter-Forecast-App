<LinearLayout
    android:background="@drawable/card_background"
    android:id="@+id/linearLayout7"
    android:layout_height="0dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:layout_constraintHeight_percent="0.25"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    tools:layout_editor_absoluteX="40dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:paddingRight="20dp"
            android:text="Today"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Date"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Mar, 9"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:ellipsize="none"
                android:id="@+id/CurrentTime"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/WeatherIcon1"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <TextView
                android:ellipsize="none"
                android:id="@+id/CurrentTemp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:ellipsize="none"
                android:id="@+id/OneTime"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/WeatherIcon2"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <TextView
                android:ellipsize="none"
                android:id="@+id/OneTemp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:ellipsize="none"
                android:id="@+id/TwoTime"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/WeatherIcon3"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <TextView
                android:ellipsize="none"
                android:id="@+id/TwoTemp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:ellipsize="none"
                android:id="@+id/ThreeTime"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/WeatherIcon4"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="50dp" />

            <TextView
                android:ellipsize="none"
                android:id="@+id/ThreeTemp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="29C"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>